# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "ai-service"
environment  = "staging"
aws_region   = "us-east-1"

# Container Image Configuration
image_registry = "123456789012.dkr.ecr.us-east-1.amazonaws.com"
image_tag      = "v1.0.0"

# ECS Configuration
ecs_cluster_id = "arn:aws:ecs:us-east-1:123456789012:cluster/ai-service-staging"
task_cpu       = "1024"
task_memory    = "2048"
desired_count  = 2
launch_type    = "FARGATE"

# Container Configuration
api_cpu    = 512
api_memory = 1024
api_port   = 8080

# Network Configuration
vpc_id             = "vpc-12345678"
subnet_ids         = ["subnet-12345678", "subnet-87654321"]
security_group_ids = ["sg-12345678"]
assign_public_ip   = false

# Load Balancer Configuration
alb_arn          = "arn:aws:elasticloadbalancing:us-east-1:123456789012:loadbalancer/app/ai-service-staging/1234567890123456"
alb_listener_arn = "arn:aws:elasticloadbalancing:us-east-1:123456789012:listener/app/ai-service-staging/1234567890123456/1234567890123456"
health_check_path = "/health"

# ALB Listener Rules
alb_listener_rules = {
  "ai-api" = {
    "api-rule" = {
      priority = 100
      conditions = [
        {
          type   = "path_pattern"
          values = ["/api/*"]
        }
      ]
    }
  }
}

# Auto Scaling Configuration
min_capacity         = 1
max_capacity         = 5
cpu_threshold_high   = 70
cpu_threshold_low    = 20
cpu_evaluation_period = 2
cpu_period           = 300
cooldown_period      = 300

# Logging Configuration
log_retention_days = 30
kms_key_id        = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# Tags
tags = {
  Environment = "staging"
  Project     = "ai-service"
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
}

# Container Environment Variables
container_environment_variables = {
  "NODE_ENV"     = "staging"
  "PORT"         = "8080"
  "DATABASE_URL" = "SECRETS"
  "API_KEY"      = "SECRETS"
  "LOG_LEVEL"    = "debug"
  "REDIS_URL"    = "redis://staging-redis:6379"
}